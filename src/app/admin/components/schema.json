{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Web Page Content Schema",
  "type": "object",
  "properties": {
    "location": { "type": "string", "maxLength": 20 ,  "readOnly": true},
    "pageid": { "type": "string", "maxLength": 10 },
    "isactive": { "type": "boolean" },
    "parentid": { "type": "string", "maxLength": 50 },
    "path": { "type": "string", "format": "uri-reference", "maxLength": 200 },
    "title": { "type": "string", "maxLength": 150 },
    "desc": { "type": "string", "maxLength": 100 },
    "metatitle": { "type": "string", "maxLength": 60 },
    "metadescription": { "type": "string", "maxLength": 160 },
    "seosection": { "type": "string", "maxLength": 5000 },
    "icon": { "type": ["string"], "pattern": "^$|^(https?:\\/\\/[^\\s]+)$","maxLength": 200 },
    "homepageicon": { "type": ["string"], "pattern": "^$|^(https?:\\/\\/[^\\s]+)$","maxLength": 200 },
    "iconalttextforhomepage": { "type": "string", "maxLength": 200 },
    "otherpageicon": { "type": ["string"], "pattern": "^$|^(https?:\\/\\/[^\\s]+)$","maxLength": 200 },
    "otherpageiconalttext": { "type": "string", "maxLength": 200 },
    "booknowurl": { "type": ["string"], "pattern": "^$|^(https?:\\/\\/[^\\s]+)$","maxLength": 200 },
    "video": { "type": ["string"], "pattern": "^$|^(https?:\\/\\/[^\\s]+)$","maxLength": 200 },
    "smallimage": { "type": ["string"], "pattern": "^$|^(https?:\\/\\/[^\\s]+)$","maxLength": 200 },
    "smalltext": { "type": "string", "maxLength": 200 },
    "pageimages": { "type": "string", "maxLength": 5000 },
    "headerimage": { "type": ["string"], "pattern": "^$|^(https?:\\/\\/[^\\s]+)$","maxLength": 200 },
    "imagetitle": { "type": "string", "maxLength": 150 },
    "section1": { "type": "string", "maxLength": 5000 },
    "sectionImage": { "type": ["string"], "pattern": "^$|^(https?:\\/\\/[^\\s]+)$","maxLength": 200 },
    "section2": { "type": "string", "maxLength": 5000 },
    "section2Image": { "type": ["string"], "pattern": "^$|^(https?:\\/\\/[^\\s]+)$","maxLength": 200 },
    "Seoheader": { "type": "string", "maxLength": 100 },
    "ld_schema_type": { "type": "string", "maxLength": 100 },
    "ld_schema_name": { "type": "string", "maxLength": 200 },
    "ld_schema_description": { "type": "string", "maxLength": 250 },
    "booknowlink": { "type": ["string"], "pattern": "^$|^(https?:\\/\\/[^\\s]+)$","maxLength": 200 }
  },
  "required": ["pageid", "title",  "path"],
  "additionalProperties": false
}
